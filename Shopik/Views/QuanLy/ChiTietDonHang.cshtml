    Layout = "~/Views/AdminLayout/Admin_Layout1.cshtml";
}

<h2>ChiTietDonHang</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonHang.HoTen)
