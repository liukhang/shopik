
@{
    ViewBag.Title = "SuaGioHang";
    Layout = "~/Views/ShopikLayout/Shopik_Layout1.cshtml";
}
<section class="page-content">
    <div class="container">
        <div class="row">
            <div class="cart-table">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td>Tên sách</td>

                                <td>Ảnh bìa</td>

                                <td>Đơn giá</td>

                                <td>Số lượng</td>

                                <td>Thành tiền</td>
                                <td>Khác</td>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr style="text-align:center">

                                    <td>@item.ProductName</td>

                                    <td><img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="50" height="50" /></td>

                                    <td>
                                        @String.Format("{0:0,0}", item.Price) VNĐ
                                    </td>
                                    @*Chỉnh sửa giỏ hàng gọi về action CapNhatGioHang*@
                                    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.id }))
                                    {
                                        <td><input type="text" id="txtSoLuong" name="txtSoLuong" value="@item.SoLuong"/></td>
                                        <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
                                        <td>
                                            <input type="submit" value="Cập nhật" />
                                            <br /><br />
                                            @*Xóa giỏ hàng gọi về Action XoaGioHang*@
                                            @Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP = item.id })
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


